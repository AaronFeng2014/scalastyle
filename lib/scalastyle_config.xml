<?xml version="1.0" encoding="UTF-8"?>
<scalastyle>
	<name>Scalastyle standard configuration</name>
	<check class="org.segl.scalastyle.file.FileTabChecker" level="warning"/>
	<check class="org.segl.scalastyle.file.FileLengthChecker" level="warning">
        <parameters>
            <parameter name="maxFileLength" value="800" />
        </parameters>
    </check>
    <check class="org.segl.scalastyle.scalariform.SpacesAfterPlusChecker" level="warning" />
    <check class="org.segl.scalastyle.file.WhitespaceEndOfLineChecker" level="warning" />
    <check class="org.segl.scalastyle.scalariform.SpacesBeforePlusChecker" level="warning" />
	<check class="org.segl.scalastyle.file.FileLineLengthChecker" level="warning">
		<parameters>
            <parameter name="maxLineLength" value="160" />
            <parameter name="tabSize" value="4" />
		</parameters>
	</check>
    <check class="org.segl.scalastyle.scalariform.ClassNamesChecker" level="warning" />
    <check class="org.segl.scalastyle.scalariform.ObjectNamesChecker" level="warning" />
    <check class="org.segl.scalastyle.scalariform.EqualsHashCodeChecker" level="warning" />
    <check class="org.segl.scalastyle.scalariform.IllegalImportsChecker" level="warning" />
    <check class="org.segl.scalastyle.scalariform.MagicNumberChecker" level="warning" />
    <check class="org.segl.scalastyle.scalariform.NoWhitespaceBeforeLeftBracketChecker" level="warning" />
    <check class="org.segl.scalastyle.scalariform.NoWhitespaceAfterLeftBracketChecker" level="warning" />
    <check class="org.segl.scalastyle.scalariform.ReturnChecker" level="warning" />
    <check class="org.segl.scalastyle.scalariform.NullChecker" level="warning" />
    <check class="org.segl.scalastyle.scalariform.NoCloneChecker" level="warning" />
    <check class="org.segl.scalastyle.scalariform.NoFinalizeChecker" level="warning" />
    <check class="org.segl.scalastyle.scalariform.CovariantEqualsChecker" level="warning" />
    <check class="org.segl.scalastyle.scalariform.ParameterNumberChecker" level="warning" />
</scalastyle>
