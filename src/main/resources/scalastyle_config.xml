<?xml version="1.0" encoding="UTF-8"?>
<scalastyle>
	<name>Scalastyle standard configuration</name>
	<check class="org.segl.scalastyle.FileTabChecker" />
	<check class="org.segl.scalastyle.FileLengthChecker">
        <parameters>
            <parameter name="maxFileLength" value="800" />
        </parameters>
    </check>
	<check class="org.segl.scalastyle.SpacesAfterPlusChecker" />
	<check class="org.segl.scalastyle.FileLineLengthChecker">
		<parameters>
			<parameter name="maxLineLength" value="80" />
		</parameters>
	</check>
</scalastyle>
