<?xml version="1.0" encoding="UTF-8"?>
<!--  scalastyle definition file. This contains the list of checkers and the parameters & types available -->
<scalastyle-definition>
	<checker class="org.segl.scalastyle.file.FileTabChecker" id="line.contains.tab" defaultLevel="warning"/>
    <checker class="org.segl.scalastyle.file.FileLengthChecker" id="file.size.limit" defaultLevel="warning">
        <parameters>
            <parameter name="maxFileLength" type="integer" default="1500"/>
        </parameters>
    </checker>
    <checker class="org.segl.scalastyle.file.HeaderMatchesChecker" id="header.matches" defaultLevel="warning">
        <parameters>
            <parameter name="header" type="multistring" default=""/>
        </parameters>
    </checker>
    <checker class="org.segl.scalastyle.scalariform.SpacesAfterPlusChecker" id="spaces.after.plus" defaultLevel="warning" />
    <checker class="org.segl.scalastyle.file.WhitespaceEndOfLineChecker" id="whitespace.end.of.line" defaultLevel="warning" />
    <checker class="org.segl.scalastyle.scalariform.SpacesBeforePlusChecker" id="spaces.before.plus" defaultLevel="warning" />
	<checker class="org.segl.scalastyle.file.FileLineLengthChecker" id="line.size.limit" defaultLevel="warning" >
		<parameters>
            <parameter name="maxLineLength" type="integer" default="160" />
            <parameter name="tabSize"  type="integer" default="4" />
		</parameters>
	</checker>
    <checker class="org.segl.scalastyle.scalariform.ClassNamesChecker" id="class.name" defaultLevel="warning" />
    <checker class="org.segl.scalastyle.scalariform.ObjectNamesChecker" id="object.name" defaultLevel="warning" />
    <checker class="org.segl.scalastyle.scalariform.EqualsHashCodeChecker" id="equals.hash.code"  defaultLevel="warning"/>
    <checker class="org.segl.scalastyle.scalariform.IllegalImportsChecker" id="illegal.imports" defaultLevel="warning" >
        <parameters>
            <parameter name="illegalImports" type="string" default="sun._,java.awt._" />
        </parameters>
    </checker>
    <checker class="org.segl.scalastyle.scalariform.ParameterNumberChecker" id="parameter.number" defaultLevel="warning" >
        <parameters>
            <parameter name="maxParameters" type="integer" default="8" />
        </parameters>
    </checker>
    <checker class="org.segl.scalastyle.scalariform.MagicNumberChecker" id="magic.number" defaultLevel="warning" >
        <parameters>
            <parameter name="ignore" type="string" default="-1,0,1,2" />
        </parameters>
    </checker>
    <checker class="org.segl.scalastyle.scalariform.NoWhitespaceBeforeLeftBracketChecker" id="no.whitespace.before.left.bracket" defaultLevel="warning" />
    <checker class="org.segl.scalastyle.scalariform.NoWhitespaceAfterLeftBracketChecker" id="no.whitespace.after.left.bracket" defaultLevel="warning" />
    <checker class="org.segl.scalastyle.scalariform.ReturnChecker" id="return" defaultLevel="warning" />
    <checker class="org.segl.scalastyle.scalariform.NullChecker" id="null" defaultLevel="warning" />
    <checker class="org.segl.scalastyle.scalariform.NoCloneChecker" id="no.clone" defaultLevel="warning" />
    <checker class="org.segl.scalastyle.scalariform.NoFinalizeChecker" id="no.finalize" defaultLevel="warning" />
    <checker class="org.segl.scalastyle.scalariform.CovariantEqualsChecker" id="covariant.equals" defaultLevel="warning" />
</scalastyle-definition>
